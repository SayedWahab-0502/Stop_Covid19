<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyCountry"
    android:padding="20dp"
    android:background="@drawable/background_gradient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_backarrow"
            app:tint="@color/black"
            android:padding="5dp"
            android:id="@+id/back_arrow_mycountry">
        </ImageView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_refresh_24"
            app:tint="@color/black"
            android:padding="5dp"
            android:id="@+id/refresh_mycountry"
            android:layout_alignParentEnd="true">
        </ImageView>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/logo"
        android:layout_marginTop="25dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_one"
                android:text="@string/st"
                android:textColor="#FA233F"
                android:textSize="25sp"
                android:textStyle="normal">

            </TextView>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_covid"
                >
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_one"
                android:text="@string/p"
                android:textColor="#FA233F"
                android:textSize="25sp"
                android:textStyle="normal">

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_one"
                android:text="@string/c"
                android:textColor="#FA233F"
                android:textSize="25sp"
                android:textStyle="normal">

            </TextView>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_virus">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_one"
                android:text="@string/vid19"
                android:textColor="#FA233F"
                android:textSize="25sp"
                android:textStyle="normal">

            </TextView>


        </LinearLayout>


    </LinearLayout>



    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/logo"
        android:paddingStart="10dp"
        android:maxLines="1"
        android:singleLine="true"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:background="@drawable/bg_edittext"
        android:drawablePadding="15dp"
        android:hint="Search..."
        android:id="@+id/id_search">

    </com.google.android.material.textfield.TextInputEditText>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/id_search"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="6dp"
    android:elevation="8dp">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:id="@+id/listview">
    </ListView>

    <com.leo.simplearcloader.SimpleArcLoader
        android:visibility="gone"
        android:id="@+id/loader_arc_mycountry"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:arc_style="simple_arc"
        android:layout_gravity="center">

    </com.leo.simplearcloader.SimpleArcLoader>


    <include layout="@layout/progressdialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </include>

</androidx.cardview.widget.CardView>





</RelativeLayout>